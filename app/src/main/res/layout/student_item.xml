<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="#00404040"
    android:backgroundTint="#00FFFFFF"
    android:backgroundTintMode="src_in"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardCornerRadius="250dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_corner"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_alternates_bold2"
            android:maxLines="2"
            android:paddingHorizontal="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            tools:text="Student Name" />

        <TextView
            android:id="@+id/text_view_grname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_name"
            android:layout_alignLeft="@id/text_view_name"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:paddingHorizontal="12dp"
            android:textStyle="bold"
            tools:text="Group name" />

        <Button
            android:id="@+id/studDelButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/del_button"
            android:contentDescription="@string/title_students"
            android:padding="8dp"
            android:visibility="visible"

            app:icon="@drawable/delete"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>